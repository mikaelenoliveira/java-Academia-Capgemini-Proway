package heranca;

public class Heranca {
	public static void main(String[] args) {
		Animal a1 = new Animal();
		a1.especie = "Felino";
		a1.raca = "Siamês";
		System.out.printf("Especie: %s \nRaça: %s ", a1.especie, a1.raca);
		
		Mamifero m1 = new Mamifero();
		m1.mamas = 14;
		m1.especie = "Suina";
		m1.raca = "piatã";
		System.out.printf("\nEspecie: %s \nRaça: %s \nMamas: %d", m1.especie, m1.raca, m1.mamas);
		
		Aves a1 = new Aves();
		a1.coloracaoPenas = "Azul e amarelo";
		a1.especie = "Periquito";
		a1.raca = "Calopsita"; 
		System.out.println("\nEspecie: %s \nRaça: %s \nCor das penas: %s", m1.especie, m1.raca, m1.coloracaoPenas);
	}

}
