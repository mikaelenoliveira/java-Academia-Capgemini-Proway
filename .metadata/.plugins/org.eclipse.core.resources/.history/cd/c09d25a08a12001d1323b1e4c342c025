package heranca;

public class Heranca {
	public static void main(String[] args) {
		Animal an1 = new Animal();
		an1.especie = "Felino";
		an1.raca = "Siamês";
		System.out.printf("Especie: %s \nRaça: %s ", an1.especie, an1.raca);
		
		Mamifero m1 = new Mamifero();
		m1.mamas = 14;
		m1.especie = "Suina";
		m1.raca = "piatã";
		System.out.printf("\nEspecie: %s \nRaça: %s \nMamas: %d", m1.especie, m1.raca, m1.mamas);
		
		Aves av1 = new Aves();
		av1.coloracaoPenas = "Azul e amarelo";
		av1.especie = "Periquito";
		av1.raca = "Calopsita"; 
		System.out.printf("\nEspecie: %s \nRaça: %s \nCor das penas: %s", av1.especie, av1.raca, av1.coloracaoPenas);
	}

}
