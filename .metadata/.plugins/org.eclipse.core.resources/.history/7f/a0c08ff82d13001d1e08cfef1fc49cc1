package dao;

import java.util.List;
import java.util.List;

public class DaoContato {
	List<Contato> lista = new ArrayList()<>();
	
	private List<Contato> consultaTodos(){
		//escrever rotina para consultar do banco de dados e acrescentar na lista
		return lista;
		}

	public boolean salvar(Contato ct) {
		lista.add(ct);
		return true;
	}
	
	static listar(List<Contato> lista) {
		for(Contato c: lista) {
			System.out.printf("\nnome: %s email: %s", c.getNome(), c.getEmail());
			
		}
	}
}
